  "devDependencies": {
    "@types/three": "^0.178.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "firebase": "^12.4.0",
