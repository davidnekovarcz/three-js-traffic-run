{
  "name": "three-js-traffic-run",
  "version": "1.0.0",
  "description": "Traffic Run - 2.5D Racing Game",
  "author": "https://github.com/davidnekovarcz",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "traffic-run",
    "racing",
    "game",
    "2d",
    "r3f",
    "three-js",
    "typescript",
    "cypress"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node server.js",
    "preview": "vite preview",
    "test": "cypress run --headless",
    "lint": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js,json,css,md}",
